<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="#F2F2F2"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:background="@color/white"
        android:layout_height="50dp">

        <TextView
            android:id="@+id/tv_forget_cancel"
            android:layout_width="wrap_content"
            android:text="取消"
            android:textSize="18sp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:textColor="@color/bt_green"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="wrap_content"
            android:text="重置密码"
            android:layout_centerInParent="true"
            android:textSize="22sp"
            android:layout_height="wrap_content" />
    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:background="@color/bg_grey"
        android:layout_height="1px" />

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="50dp"
        android:background="@color/white"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:background="@color/bg_grey"
            android:layout_height="1px" />

        <com.src.playtime.thumb.widget.ClearEditText
            android:id="@+id/ced_forget_user"
            android:layout_width="match_parent"
            android:padding="15dp"
            android:inputType="number"
            android:background="@null"
            android:hint="手机号码"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="match_parent"
            android:background="@color/bg_grey"
            android:layout_height="1px" />

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">

            <com.src.playtime.thumb.widget.ClearEditText
                android:id="@+id/ced_forget_smscode"
                android:layout_width="match_parent"
                android:padding="15dp"
                android:layout_weight="1"
                android:inputType="number"
                android:background="@null"
                android:hint="短信验证码"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/bt_forget_request"
                android:layout_width="wrap_content"
                android:text="获取验证码"
                android:padding="5dp"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="5dp"
                android:background="@drawable/green_bg_shape"
                android:textColor="@color/bt_green"
                android:layout_height="40dp" />

        </LinearLayout>

        <com.src.playtime.thumb.widget.ClearEditText
            android:id="@+id/ced_register_key"
            android:layout_width="match_parent"
            android:padding="15dp"
            android:background="@null"
            android:hint="请设置密码"
            android:inputType="textPassword"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="match_parent"
            android:background="@color/bg_grey"
            android:layout_height="1px" />

        <com.src.playtime.thumb.widget.ClearEditText
            android:id="@+id/ced_register_keys"
            android:layout_width="match_parent"
            android:padding="15dp"
            android:background="@null"
            android:hint="请确认密码"
            android:inputType="textPassword"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="match_parent"
            android:background="@color/bg_grey"
            android:layout_height="1px" />

    </LinearLayout>

    <Button
        android:id="@+id/bt_forget_next"
        android:layout_width="match_parent"
        android:layout_marginTop="50dp"
        android:textColor="@color/white"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:text="提交"
        android:background="@drawable/login_bt_bg"
        android:layout_height="wrap_content" />

</LinearLayout>