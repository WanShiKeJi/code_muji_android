<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:textColor="@color/tab_text"
        android:textSize="18sp"
        android:text="呼叫转移需要配置拇机号码等信息："/>

    <TextView
        android:layout_width="match_parent"
        android:background="@color/tab_text"
        android:layout_height="1px" />



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="邮箱"/>

    <EditText
        android:id="@+id/ed_config_email"
        android:layout_width="match_parent"
        android:layout_marginTop="5dp"
        android:padding="10dp"
        android:hint="xxxxx@xxx.xxx"
        android:inputType="textEmailAddress"
        android:background="@drawable/search_edit_bg"
        android:layout_height="wrap_content" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="密码"/>

        <EditText
            android:id="@+id/ed_config_password"
            android:layout_width="match_parent"
            android:layout_marginTop="5dp"
            android:padding="10dp"
            android:hint="输入不少于六位的密码"
            android:inputType="textPassword"
            android:background="@drawable/search_edit_bg"
            android:layout_height="wrap_content" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="拇机号码"/>

    <EditText
        android:id="@+id/ed_config_phone"
        android:layout_width="match_parent"
        android:layout_marginTop="5dp"
        android:padding="10dp"
        android:hint="13xxxxxxxxx"
        android:inputType="phone"
        android:background="@drawable/search_edit_bg"
        android:layout_height="wrap_content" />

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/tab_text"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_config_cancel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="15dp"
            android:textColor="@color/tab_text"
            android:layout_weight="1"
            android:text="取消"/>

        <TextView
            android:layout_width="1px"
            android:padding="15dp"
            android:layout_height="match_parent"
            android:background="@color/tab_text"/>

        <TextView
            android:id="@+id/tv_config_confirm"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:textColor="@color/tab_text"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:text="确定"/>
        </LinearLayout>


</LinearLayout>