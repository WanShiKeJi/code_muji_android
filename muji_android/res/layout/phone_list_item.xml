<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="false"
    android:focusable="false"
    android:focusableInTouchMode="false"
    android:gravity="center"
    android:orientation="vertical">

    <com.src.playtime.thumb.widget.DeleteLinearLayout
        android:id="@+id/phone_list_expand"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:orientation="vertical">

            <TextView
                android:id="@+id/phone_list_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:lines="1"
                android:text="黄先生"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/phone_list_tel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/phone_list_name"
                android:layout_marginTop="2dp"
                android:text="18866666666"
                android:textColor="@color/grey_phone" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/phone_list_state"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/phone_list_duration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/grey_phone"
                android:visibility="gone" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:gravity="left"
            android:orientation="vertical">

            <TextView
                android:id="@+id/phone_list_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:text="16:17"
                android:textColor="@color/grey_phone" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/phone_list_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="四川成都"
                    android:textColor="@color/grey_phone" />

                <TextView
                    android:id="@+id/phone_list_operators"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3dp"
                    android:text="移动"
                    android:textColor="@color/grey_phone" />
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="#E6E6E6" />

    </com.src.playtime.thumb.widget.DeleteLinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#E6E6E6" />

    <LinearLayout
        android:id="@+id/test_expand"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:background="@color/red"
        android:orientation="horizontal"
        android:visibility="gone"></LinearLayout>

    <include layout="@layout/list_other_footer" />

</LinearLayout>