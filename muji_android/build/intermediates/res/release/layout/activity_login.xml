<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_height="200dp">


        <com.src.playtime.thumb.widget.GifMovieView
            xmlns:custom="http://schemas.android.com/apk/res-auto"
            android:layout_width="wrap_content"
            android:layout_marginTop="50dp"
            custom:gif="@drawable/call_phone_gif1"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:background="@color/grey_phone"
        android:layout_height="1px" />

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:layout_height="wrap_content">

    <com.src.playtime.thumb.widget.ClearEditText
        android:id="@+id/ced_login_user"
        android:layout_width="match_parent"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:inputType="number"
        android:maxLength="11"
        android:background="@null"
        android:drawablePadding="5dp"
        android:drawableLeft="@drawable/icon_login_user"
        android:hint="11位手机号"
        android:layout_height="match_parent" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/grey_phone"/>

        <com.src.playtime.thumb.widget.ClearEditText
            android:id="@+id/ced_login_key"
            android:layout_width="match_parent"
            android:paddingTop="15dp"
            android:drawablePadding="5dp"
            android:inputType="textPassword"
            android:drawableLeft="@drawable/icon_login_key"
            android:paddingBottom="15dp"
            android:background="@null"
            android:hint="请输入密码"
            android:layout_height="match_parent" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:background="@color/grey_phone"
        android:layout_height="1px" />

    <Button
        android:id="@+id/bt_login"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:textColor="@color/white"
        android:layout_marginLeft="10dp"
        android:padding="10dp"
        android:background="@drawable/login_bt_bg"
        android:layout_marginRight="10dp"
        android:text="登录"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="15dp"
        android:gravity="right"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_login_forget"
            android:layout_width="wrap_content"
            android:text="忘记密码?"
            android:layout_marginRight="10dp"
            android:textColor="#628BB7"
            android:textSize="18sp"
            android:layout_height="wrap_content" />
        </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:gravity="bottom"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tv_login_register"
            android:layout_width="match_parent"
            android:gravity="center_horizontal"
            android:text="注册账号"
            android:textSize="22sp"
            android:textColor="#628BB7"
            android:layout_marginBottom="10dp"
            android:layout_height="wrap_content" />
    </LinearLayout>

</LinearLayout><!-- From: file:/D:/code_muji_android/muji_android/res/layout/activity_login.xml -->