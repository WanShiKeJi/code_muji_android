<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:gravity="center"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:textColor="@color/bg_progress"
        android:text="想绑定【拇机】？请先开启手机的蓝牙"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/tab_text"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_dialogble_confirm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="15dp"
            android:textColor="@color/tab_text"
            android:layout_weight="1"
            android:text="OK"/>

        <TextView
            android:layout_width="1px"
            android:padding="15dp"
            android:layout_height="match_parent"
            android:background="@color/tab_text"/>

        <TextView
            android:id="@+id/tv_dialogble_cancel"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:textColor="@color/tab_text"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:text="不OK"/>
    </LinearLayout>

</LinearLayout><!-- From: file:/D:/code_muji_android/muji_android/res/layout/dialog_ble.xml -->